- 
	const regFormDatas = [
		{
			label: 'E-mail',
			name: 'email'
		},
		{
			label: 'Логин',
			name: 'login'
		},
		{
			label: 'Фамилия',
			name: 'second_name'
		},
		{
			label: 'Имя',
			name: 'first_name'
		},
		{
			label: 'Телефон',
			name: 'phone'
		},
	];

each data in regFormDatas
	div.form-block
		label= data.label
		div.input-wrapper
			input.form-control.input-styles(type="text" value="" name=data.name)
			div.error-text-block.none-block
