div.form-block
	label Пароль
	div.input-wrapper
		input.form-control.input-styles(type="password" value="" name="password")
		div.error-text-block.none-block
div.form-block
	label Повторите пароль
	div.input-wrapper
		input.form-control.input-styles(type="password" value="" name="")
		div.error-text-block.none-block
